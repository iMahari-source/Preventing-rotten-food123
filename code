        // Initialize App
        function initializeApp() {
            renderFoodCategories();
            renderExpirationList();
            document.getElementById('expirationDate').valueAsDate = new Date();
        }

        // Expiration Tracker
        let expirationItems = JSON.parse(localStorage.getItem('expirationItems')) || [];

        function addExpirationItem() {
            const itemName = document.getElementById('itemName').value.trim();
            const expirationDate = document.getElementById('expirationDate').value;

            if (!itemName || !expirationDate) {
                alert('Please fill in all fields');
                return;
            }

            const item = {
                id: Date.now(),
                name: itemName,
                expirationDate: expirationDate,
                addedDate: new Date().toISOString()
            };

            expirationItems.push(item);
            localStorage.setItem('expirationItems', JSON.stringify(expirationItems));
            
            // Clear form
            document.getElementById('itemName').value = '';
            document.getElementById('expirationDate').value = '';
            
            renderExpirationList();
        }

        function renderExpirationList() {
            const listContainer = document.getElementById('expirationList');
            
            if (expirationItems.length === 0) {
                listContainer.innerHTML = '<p style="text-align: center; color: #666;">No items tracked yet. Add your first item above!</p>';
                return;
            }

            const today = new Date();
            today.setHours(0, 0, 0, 0);

            let html = '';
            expirationItems.forEach(item => {
                const expDate = new Date(item.expirationDate);
                expDate.setHours(0, 0, 0, 0);
                const daysUntilExpiry = Math.ceil((expDate - today) / (1000 * 60 * 60 * 24));
                
                let statusClass = '';
                let statusText = '';
                
                if (daysUntilExpiry < 0) {
                    statusClass = 'expired';
                    statusText = '‚ö†Ô∏è EXPIRED - Health Risk!';
                } else if (daysUntilExpiry <= 3) {
                    statusClass = 'expiring-soon';
                    statusText = '‚ö° EXPIRING SOON';
                } else {
                    statusClass = 'fresh';
                    statusText = '‚úÖ FRESH';
                }

                html += `
                    <div class="expiration-item ${statusClass}">
                        <div class="expiration-info">
                            <strong>${item.name}</strong><br>
                            <small>Expires: ${new Date(item.expirationDate).toLocaleDateString()}</small><br>
                            <strong>${statusText} - ${daysUntilExpiry < 0 ? Math.abs(daysUntilExpiry) + ' days ago' : daysUntilExpiry + ' days left'}</strong>
                        </div>
                    </div>
                `;
            });
            
            listContainer.innerHTML = html;
        }

        // Camera System
        let video = document.getElementById('video');
        let canvas = document.getElementById('canvas');
        let resultSection = document.getElementById('resultSection');
        let fruitResult = document.getElementById('fruitResult');

        async function startCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    video: { facingMode: 'environment' } 
                });
                video.srcObject = stream;
                video.style.display = 'block';
                document.getElementById('captureBtn').style.display = 'inline-block';
                document.getElementById('cameraPlaceholder').style.display = 'none';
            } catch (err) {
                alert('Camera access denied. Please upload a photo instead.');
            }
        }

        function takePhoto() {
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            canvas.getContext('2d').drawImage(video, 0, 0);
            
            const imageData = canvas.toDataURL('image/jpeg');
            analyzeFruit(imageData);
        }

        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    analyzeFruit(e.target.result);
                };
                reader.readAsDataURL(file);
            }
        }

        function analyzeFruit(imageData) {
            resultSection.style.display = 'block';
            
            const fruits = [
                { name: 'Apple', status: 'Fresh', message: 'Store in cold water in sealed container for maximum crispness! Temperature: 30-35¬∞F, Humidity: 90-95%' },
                { name: 'Banana', status: 'Getting Ripe', message: 'Wrap stem in plastic wrap and keep away from other fruits! Temperature: 59-68¬∞F, Humidity: 85-95%' },
                { name: 'Orange', status: 'Fresh', message: 'Store in mesh bag in fridge crisper - can last 2 months! Temperature: 45-48¬∞F, Humidity: 85-90%' },
                { name: 'Strawberry', status: 'Fresh', message: 'Keep unwashed in original container. Remove any mushy berries! Temperature: 32-34¬∞F, Humidity: 90-95%' },
                { name: 'Mango', status: 'Getting Ripe', message: 'Keep at room temp until sweet-smelling, then refrigerate! Temperature: 55-70¬∞F, Humidity: 85-90%' }
            ];
            
            const detected = fruits[Math.floor(Math.random() * fruits.length)];
            
            fruitResult.innerHTML = `
                <div class="fruit-identified">
                    <h4>Detected: ${detected.name}</h4>
                    <div class="fresh-status fresh">${detected.status}</div>
                    <p>${detected.message}</p>
                    <p><strong>Storage Tips:</strong> Check our detailed food database above for complete storage instructions!</p>
                </div>
            `;
        }

        // Render Food Categories
        function renderFoodCategories() {
            const container = document.getElementById('foodCategories');
            let html = '';
            
            foodCategories.forEach(category => {
                html += `<div class="category-card"><h3>${category.name}</h3>`;
                category.items.forEach(item => {
                    html += `
                        <div class="food-item">
                            <h4>${item.name}</h4>
                            <p>${item.storage}</p>
                            <div class="storage-info">
                                <span class="info-tag temp-tag">Temp: ${item.temp}</span>
                                <span class="info-tag humidity-tag">Humidity: ${item.humidity}</span>
                                <span class="info-tag shelf-tag">Shelf life: ${item.shelfLife}</span>
                            </div>
                            <div class="storage-details">
                                <strong>EXAMPLE:</strong> ${item.details}
                            </div>
                        </div>
                    `;
                });
                html += `</div>`;
            });
            
            container.innerHTML = html;
        }

        // Initialize
        window.onload = function() {
            // Login page shows first
        };
    </script>
</body>
</html>
